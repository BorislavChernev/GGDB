@using GoodGameDatabase.Web.ViewModels.Discussion;
@model dynamic

@{
    ViewData["Title"] = "All discussions";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        @if (Model.ViewModels.Count > 0)
        {
            <div class="flex flex-col-reverse h-full">
                <partial name="_PaginationPartial" model="@Model.PageViewModel" />
            </div>
            <div class="grid grid-cols-4 gap-4 ml-6">
                @foreach (var viewModel in Model.ViewModels)
                {
                    <partial name="_DiscussionPartial" model="viewModel" />
                }
            </div>
        }
        else
        {
            <p>There are no Discussions available.</p>
        }
    </div>
</body>
</html>
