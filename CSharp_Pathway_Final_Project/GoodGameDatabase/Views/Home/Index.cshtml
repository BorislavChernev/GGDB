@using GoodGameDatabase.Web.ViewModels.Game;
@model IEnumerable<BestFiveGameViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@*MAIN CENTER*@
<div class="flex w-8/12 flex-col border-5 border-black">

    @*MAIN INSIDE*@
    <div class="w-full h-full border-5 border-yellow-600">

        @*BEST GAME FAR CRY 6*@
        <div class="w-full h-4/6 border-5 border-green-600">


                
