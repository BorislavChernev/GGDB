<div class="flex h-1/4 flex-row border-5 border-pink-500">

    @*LEFT PART (IMAGE)*@
    <div class="w-4/12 border-5 border-yellow-500">
        <img class="w-full" src="@Model.ImageUrl" />
    </div>


    @*RIGHT PART (INFO)*@
    <div class="flex flex-col w-8/12">
        <div class="border-5 h-1/3 border-black">@Model.Id</div>
        <div class="border-5 h-1/3 border-black">@Model.Rating</div>
        <div class="border-5 h-1/3 border-black">@Model.Name</div>
    </div>
</div>