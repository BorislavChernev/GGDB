<div class="flex w-full h-full flex-row mt-3">

    @*LEFT PART (IMAGE)*@
    <div class="w-8/12 h-full">
        <img class="object-cover w-full rounded-xl" src="@Model.ImageUrl" />
    </div>


    @*RIGHT PART (INFO)*@
    <div class="flex flex-col w-4/12 h-full">
        <div class="border-5 w-full h-2/4">Name: @Model.Name</div>
        <div class="border-5 w-full h-1/4">Rating: @Model.Rating</div>
        <div class="border-5 w-full h-1/4">Tags: @Model.SupportsPC</div>
    </div>
</div>