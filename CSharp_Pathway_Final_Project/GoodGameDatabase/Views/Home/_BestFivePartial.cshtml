<div class="flex h-1/4 flex-row border-5 border-pink-500">

    @*LEFT PART (IMAGE)*@
    <div class="w-8/12 border-5 border-yellow-500">
        <img class="object-cover h-full w-full" src="@Model.ImageUrl" />
    </div>


    @*RIGHT PART (INFO)*@
    <div class="flex flex-col w-4/12">
        <div class="border-5 h-2/4 border-black text-right">@Model.Name</div>
        <div class="border-5 h-1/4 border-black text-right">@Model.Rating</div>
        <div class="border-5 h-1/4 border-black text-right">@Model.SupportsWindows</div>
    </div>
</div>