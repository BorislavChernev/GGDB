@using GoodGameDatabase.Web.ViewModels.Game;
@model GameDetailsViewModel

<form>
    <div>
        <label for="Description" class="block text-sm text-gray-500">Description</label>

    <textarea name="Description" placeholder="..." class="block resize-none mt        -2 w-full  placeholder-gray-400/70 dark:placeholder-gray-500 rounded-lg border border-gray-200 bg-white px-4 h-32 py-2.5 text-black focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"></textarea>
        </div>

    <select name="Type">
        <option name="OverhwelminglyPositive" value="OverhwelminglyPositive">Overhwelmingly Positive</option>
        <option name="VeryPositive" value="VeryPositive">Very Positive</option>
        <option name="Positive" value="Positive">Positive</option>
        <option name="MostlyPositive" value="MostlyPositive">MostlyPositive</option>
        <option name="Mixed" value="Mixed">Mixed</option>
        <option name="MostlyNegative" value="MostlyNegative">Mostly Negative</option>
        <option name="Negative" value="Negative">Negative</option>
        <option name="VeryNegative" value="VeryNegative">Very Negative</option>
    </select>
    
    <input class="hidden" name="GameId" value="@Model.Id"/>

    <button type="submit" asp-controller="Review" asp-action="CreateNew">
        Review this game
    </button>
</form>