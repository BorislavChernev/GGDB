@using GoodGameDatabase.Web.ViewModels.Game;
@model BestSixGameViewModel

<div class="border-5 border-orange-500 h-1/6 max-h-1/6 w-full max-w-full flex flex-row overflox-hidden">
    <div class="border-5 border-blue-500 h-full max-h-full w-5/12 max-w-5/12 overflox-hidden">
        <img class="object-fill object-center h-full w-full overflox-hidden"
        src="@Model.ImageUrl" />
    </div>
    <div class="border-5 border-blue-500 flex flex-col h-full max-h-full w-7/12 max-w-7/12">
        <div class="border-5 border-green-500 flex h-1/3 max-h-1/3 w-full max-w-full flex flex-row-reverse">@Model.Name</div>
        <div class="border-5 border-green-500 flex h-1/3 max-h-1/3 w-full max-w-full flex flex-row-reverse">@Model.Rating</div>
        <div class="border-5 border-green-500 flex h-1/3 max-h-1/3 w-full max-w-full flex flex-row-reverse">@Model.SupportsPC</div>
    </div>
</div>