@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center text-3xl font-semibold mb-6 mt-6">@ViewData["Title"]</h1>

<div class="flex justify-center">

    <div class="w-full md:w-1/2 lg:w-1/3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="bg-white shadow-md rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">Create a new account.</h2>
            <hr class="mb-4" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Input.Email" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-600" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Input.Password" type="password" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-600" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Input.ConfirmPassword" type="password" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-600" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <button id="registerSubmit" type="submit" class="w-full bg-pink-600 text-white py-2 rounded-md hover:bg-pink-700 transition duration-300 ease-in-out">Register</button>
            </div>
        </form>
    </div>
</div>

